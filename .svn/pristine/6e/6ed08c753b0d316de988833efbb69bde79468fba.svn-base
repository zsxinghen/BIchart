.sider-bar {
  width: 300px;
  padding: 10px 10px 0;
  height: 100%;
  box-sizing: border-box;
  .sider-bar-body {
    background-color: white;
    padding: 10px;
    border-radius: 5px;
    box-shadow: 0px 2px 5px 0px rgba(24, 27, 45, 0.14);
    height: 100%;
    box-sizing: border-box;
  }

  .sider-bar-head {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    height: 24px;
    line-height: 25px;
    .sbh-operation {
      .el-input__inner {
        border: none;
        height: 18px;
        border-bottom: 1px solid #5182e4;
        border-radius: 0;
        box-sizing: border-box;
      }
      i {
        font-size: 16px;
        margin: 0 4px 0 8px;

        &:hover {
          transform: scale(1.5);
        }
      }
    }
  }

  .sbh-title {
    color: #9798a5;
  }

  .sider-bar-list {
    margin-top: 15px;
    padding-left: 12px;
    height: calc(100% - 40px);
    overflow-y: auto;
    .sbl-item {
      color: #9798a5;
      font-size: 12px;
    }

    .sbl-item-header {
      display: flex;
      justify-content: space-between;
      padding-bottom: 8px;
      padding-top: 8px;
      border: 1px solid #ffffff00;
      box-sizing: border-box;

      i {
        font-size: 16px;
        margin: 0 6px 0 6px;
      }
    }

    .sbl-items-list {
      padding-left: 16px;

      .sbl-l-item {
        display: flex;
        justify-content: space-between;
        padding: 5px 2px 5px 2px;
        border: 1px solid #ffffff00;
        box-sizing: border-box;
      }

      .active-bar {
        background-color: #66b1ff40;
      }
    }
  }
     /*滚动条样式*/
     .sider-bar-list::-webkit-scrollbar {
      /*滚动条整体样式*/
      width: 4px;
      /*高宽分别对应横竖滚动条的尺寸*/
      height: 8px;
    }

    .sider-bar-list::-webkit-scrollbar-thumb {
      /*滚动条里面小方块*/
      border-radius: 5px;
      -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
      background: rgba(83, 88, 118, 1);
    }

    .sider-bar-list::-webkit-scrollbar-track {
      /*滚动条里面轨道*/
      -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
      border-radius: 0;
      background: #f0f2f3;
    }
  .sider-bar-empty {
    height: calc(100% - 24px);
    text-align: center;
    padding-top: 50%;
    box-sizing: border-box;
  }
  .sbl-l-item-left {
    i:hover {
      transform: none;
    }
  }

  .sbl-l-item-left,
  .sbl-l-item-right {
    display: flex;
    align-items: center;

    span {
      cursor: pointer;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      max-width: 90px;
    }

    i {
      font-size: 16px;
      margin: 0 6px 0 6px;
    }
  }
}
